<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/personal_info_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Personal Information"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:padding="10sp"
                android:src="@drawable/ic_edit_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_about_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="About Me"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_personal_info" />

            <TextView
                android:id="@+id/tv_about_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                android:enabled="false"
                android:gravity="top|start"
                android:hint="-- Not Set -- "
                android:maxLength="250"
                android:text="@string/lorem_ipsum_short"
                android:textSize="16sp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_about_header" />

            <TextView
                android:id="@+id/tv_basic_details_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Basic Details"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_about_desc" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_basic_details_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_basic_details_header">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Name"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_name_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_name"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="Naruto Uzumaki"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_name_hyphen"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name_value"
                    android:text="Age"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_value"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_age_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_age"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_value" />

                <TextView
                    android:id="@+id/tv_age_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name_value"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="21"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_age_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_value"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_age_value"
                    android:text="DOB"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_age"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_dob_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_dob"
                    app:layout_constraintTop_toBottomOf="@id/tv_age_value" />


                <TextView
                    android:id="@+id/tv_dob_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_age_value"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="12/12/2000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_dob_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_age_value"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dob_value"
                    android:text="Height"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dob"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_height_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_height"
                    app:layout_constraintTop_toBottomOf="@id/tv_dob_value" />

                <TextView
                    android:id="@+id/tv_height_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dob_value"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="5 ft 4 in"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_height_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_dob"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_physical_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_height_value"
                    android:text="Physical Status"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_height"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_physical_status_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_physical_status"
                    app:layout_constraintTop_toBottomOf="@id/tv_height_value" />

                <TextView
                    android:id="@+id/tv_physical_status_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_height_value"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="Normal"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_physical_status_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_height"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_marital_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_physical_status"
                    android:text="Marital Status"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_physical_status"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_marital_status_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_marital_status"
                    app:layout_constraintTop_toBottomOf="@id/tv_physical_status_value" />

                <TextView
                    android:id="@+id/tv_marital_status_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_physical_status"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="Never Married"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_marital_status_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_physical_status"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_no_of_children"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_marital_status"
                    android:text="No. of Children"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_marital_status"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_no_of_children_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_no_of_children"
                    app:layout_constraintTop_toBottomOf="@id/tv_marital_status_value" />

                <TextView
                    android:id="@+id/tv_no_of_children_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_marital_status"
                    android:layout_toEndOf="@id/tv_name"
                    android:paddingStart="12dp"
                    android:text="0"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_no_of_children_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_marital_status"
                    app:layout_constraintWidth_percent="0.6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_habits_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Habits"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_basic_details_desc" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_habits_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_habits_header">

                <TextView
                    android:id="@+id/tv_drinking_habit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Drinking"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_drinking_habit_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_drinking_habit"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_drinking_habit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_drinking_habit"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:paddingStart="12dp"
                    android:text="Never"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_drinking_habit_hyphen"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_smoking_habit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_drinking_habit_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Smoking"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_drinking_habit"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_smoking_habit_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_smoking_habit"
                    app:layout_constraintTop_toBottomOf="@id/tv_drinking_habit_value" />

                <TextView

                    android:id="@+id/tv_smoking_habit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_drinking_habit_value"
                    android:layout_toEndOf="@id/tv_smoking_habit"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:paddingStart="12dp"
                    android:text="Occasionally"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_smoking_habit_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_drinking_habit_value"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_food_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_smoking_habit_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Food Type"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_smoking_habit"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_food_type_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_food_type"
                    app:layout_constraintTop_toBottomOf="@id/tv_smoking_habit_value" />

                <TextView
                    android:id="@+id/tv_food_type_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_smoking_habit_value"
                    android:layout_toEndOf="@id/tv_food_type"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:paddingStart="12dp"
                    android:text="Non-Vegetarian"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_food_type_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_smoking_habit_value"
                    app:layout_constraintWidth_percent="0.6" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_hobbies_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Hobbies And Interest"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_habits_desc" />

            <TextView
                android:id="@+id/tv_hobbies_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                android:enabled="false"
                android:gravity="top|start"
                android:maxLength="500"
                android:text="Eating, Sleeping, Netflix"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hobbies_header" />

            <TextView
                android:id="@+id/tv_family_details_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Family Details"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hobbies_desc" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_family_details_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/background_rectangle_round_cornered"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_family_details_header">

                <TextView
                    android:id="@+id/tv_father_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Father's Name"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_father_name_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_father_name"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_father_name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_father_name"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="Not Set"
                    android:maxLength="500"
                    android:paddingStart="12dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_father_name_hyphen"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_mother_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_father_name_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="Mother's Name"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_father_name_value"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_mother_name_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_mother_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_father_name_value" />

                <TextView
                    android:id="@+id/tv_mother_name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_father_name_value"
                    android:layout_toEndOf="@id/tv_mother_name"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="Not Set"
                    android:maxLength="500"
                    android:paddingStart="12dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_mother_name_hyphen"
                    app:layout_constraintTop_toBottomOf="@id/tv_father_name_value"
                    app:layout_constraintWidth_percent="0.6" />

                <TextView
                    android:id="@+id/tv_no_of_brothers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mother_name_value"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:text="No. of Brothers"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_mother_name_value"
                    app:layout_constraintWidth_percent="0.4" />

                <TextView
                    android:id="@+id/tv_no_of_brothers_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:text="-"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tv_no_of_brothers"
                    app:layout_constraintTop_toBottomOf="@id/tv_mother_name_value" />

                <TextView
                    android:id="@+id/tv_no_of_brothers_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mother_name_value"
                    android:layout_toEndOf="@id/tv_no_of_brothers"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="Not Set"
                    android:maxLength="500"
